@using System.Collections.Generic;
@model List<Note>

<div class="container-fluid">
    <div class="row"><a asp-action="Add">添加Note</a></div>
    @foreach(var item in Model)
    {
        <div class="row">
            <h3>@item.Title</h3>
            <div class="content" id="md_@item.Id">@item.Content</div>
            <hr />
        </div>
    }
</div>
